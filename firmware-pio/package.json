{
  "name": "firmware-pio",
  "version": "0.6.0",
  "private": true,
  "license": "AGPL-3.0-later",
  "type": "module",
  "scripts": {
    "build": "pio run --project-dir ../",
    "build:keeper": "pnpm build --environment arduino-keeper-esp32s3_devkitc",
    "build:pot": "pnpm build --environment arduino-pot-esp32s3_devkitc",
    "flash": "pio run --project-dir ../ --target upload",
    "flash:keeper": "pnpm flash --environment arduino-keeper-esp32s3_devkitc",
    "flash:pot": "pnpm flash --environment arduino-pot-esp32s3_devkitc",
    "collect": "tsx scripts/firmware.ts collect",
    "avail": "tsx scripts/firmware.ts avail",
    "clean": "rimraf .pio .turbo binaries",
    "packages:version": "tsx scripts/firmware.ts version"
  },
  "devDependencies": {
    "@types/semver": "7.7.0",
    "commander": "14.0.0",
    "semver": "7.7.2",
    "tsx": "4.20.3",
    "typescript": "5.8.3"
  }
}
