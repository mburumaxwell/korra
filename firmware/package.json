{
  "name": "firmware",
  "version": "0.1.0",
  "private": true,
  "license": "AGPL-3.0-later",
  "scripts": {
    "blobs:clean": "west blobs clean",
    "blobs:fetch": "west blobs fetch --auto-accept hal_espressif && west blobs fetch --auto-accept hal_nxp",

    "build:keeper:esp32s3_devkitc": "node scripts/firmware.mjs build keeper esp32s3_devkitc/esp32s3/procpu",
    "build:keeper:frdm_rw612": "node scripts/firmware.mjs build keeper frdm_rw612",
    "build:keeper": "pnpm build:keeper:esp32s3_devkitc && pnpm build:keeper:frdm_rw612",
    "build:pot:esp32s3_devkitc": "node scripts/firmware.mjs build pot esp32s3_devkitc/esp32s3/procpu",
    "build:pot:frdm_rw612": "node scripts/firmware.mjs build pot frdm_rw612",
    "build:pot": "pnpm build:pot:esp32s3_devkitc && pnpm build:pot:frdm_rw612",
    "build": "pnpm build:keeper && pnpm build:pot",

    "collect": "node scripts/firmware.mjs collect",

    "flash:keeper:esp32s3_devkitc": "node scripts/firmware.mjs flash keeper esp32s3_devkitc/esp32s3/procpu",
    "flash:keeper:frdm_rw612": "node scripts/firmware.mjs flash keeper frdm_rw612",
    "flash:pot:esp32s3_devkitc": "node scripts/firmware.mjs flash pot esp32s3_devkitc/esp32s3/procpu",
    "flash:pot:frdm_rw612": "node scripts/firmware.mjs flash pot frdm_rw612",

    "clean:keeper": "rimraf build/keeper",
    "clean:pot": "rimraf build/pot",
    "clean": "pnpm clean:keeper && pnpm clean:pot",

    "packages:version": "node scripts/firmware.mjs version"
  },
  "devDependencies": {
    "@types/semver": "7.7.0",
    "commander": "14.0.0",
    "semver": "7.7.2"
  }
}
