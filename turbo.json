{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [".env", ".env.*", "eslint*.config.*", "tsconfig.json", "platformio.ini"],
  "globalEnv": ["NODE_ENV"],
  "globalPassThroughEnv": ["DATABASE_URL", "IOT_HUB_CONNECTION_STRING", "PROCESSOR_API_KEY", "FIRMWARE_API_KEY"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "out/**"]
    },
    "lint": {},
    "test": {},
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "packages:version": {
      "cache": false
    }
  }
}
