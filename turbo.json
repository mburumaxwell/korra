{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.*", "**/eslint*.config.*", "**/vitest.config.*"],
  "globalEnv": ["NODE_ENV", "DATABASE_URL", "IOT_HUB_CONNECTION_STRING", "PROCESSOR_API_KEY", "FIRMWARE_API_KEY"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "tasks/**/dist/**", ".next/**", "!.next/cache/**", "out/**"]
    },
    "lint": {},
    "test": {},
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "packages:version": {
      "cache": false
    }
  }
}
